<h1>Create a new article</h1>
<% if @article.errors.any? %>
<h2>Article could not save...</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <ul>
    <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
<%= f.label :description %>
<%= f.text_area :description %>
</p>

<%= f.submit%>
<% end %>