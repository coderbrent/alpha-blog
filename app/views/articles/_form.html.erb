<% if @article.errors.any? %>
<h2>Article could not save...</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <ul>
    <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with(model: @article, local: true)  do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit%>
</p>

<% end %>